<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup
        android:id="@+id/page_radio"
        android:orientation="horizontal"
        android:background="@drawable/radio_backgroud"
        android:layout_height="@dimen/dp_72"
        android:layout_width="@dimen/dp_312"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40">
        <RadioButton
            android:id="@+id/page_btn1"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            android:text="全部订单"
            android:drawableTop="@mipmap/common_icon_alllist_n_hdpi"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/page_btn2"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            android:text="代付款"
            android:drawableTop="@mipmap/common_icon_money_n_hdpi"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/page_btn3"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            android:text="待收货"
            android:drawableTop="@mipmap/common_icon_receive_n"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/page_btn4"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            android:text="待评价"
            android:drawableTop="@mipmap/pj"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/page_btn5"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_10"
            android:text="已完成"
            android:drawableTop="@mipmap/finish"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/page_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>