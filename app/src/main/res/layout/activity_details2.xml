<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/detail_back"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:src="@mipmap/common_nav_btn_back_n_hdpi"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <com.youth.banner.Banner
                    android:id="@+id/detail_img1"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="@dimen/dp_200"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_height="@dimen/dp_200" />
                <TextView
                    android:id="@+id/detail_price"
                    android:text="价格"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/detail_name"
                    android:text="商品简介"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/detail_zl"
                    android:text="重量"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <WebView
                    android:id="@+id/web_view"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></WebView>

            </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#fff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_500"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detail_buy"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/buy" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#fff"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_400"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detail_add"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/common_btn_add_n_hdpi" />
    </RelativeLayout>

</RelativeLayout>