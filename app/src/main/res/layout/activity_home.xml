<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeActivity">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

        <RadioGroup
            android:id="@+id/radio"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@mipmap/rectangle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <RadioButton
                android:id="@+id/btn1"
                android:button="@null"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_35"
                android:background="@drawable/home_color"
                />

            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_35"
                android:background="@drawable/qiu_color"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_34"
                android:button="@null" />
            <RadioButton
                android:id="@+id/btn3"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:background="@drawable/car_color"
                />
            <RadioButton
                android:id="@+id/btn4"
                android:button="@null"
                android:background="@drawable/page_color"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                />
            <RadioButton
                android:id="@+id/btn5"
                android:button="@null"
                android:background="@drawable/ren_color"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                />
        </RadioGroup>


</RelativeLayout>