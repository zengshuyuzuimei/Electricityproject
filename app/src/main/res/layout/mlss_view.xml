<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/mlss_color"
    >
    <ImageView
        android:id="@+id/mlss_img"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100" />
    <TextView
        android:id="@+id/mlss_title"
        android:textSize="@dimen/dp_15"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@id/mlss_img"
        android:layout_toRightOf="@id/mlss_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mlss_price"
        android:textSize="@dimen/dp_15"
        android:textColor="#ff0000"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignBottom="@id/mlss_img"
        android:layout_toRightOf="@id/mlss_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
